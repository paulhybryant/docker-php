#!/bin/bash

ARCH=("amd64" "arm64v8")
for arch in ${ARCH[@]}; do
  base="${arch}"
  if [[ "${arch}" == "amd64" ]]; then
    base="docker.io"
  fi

  echo "docker build . --build-arg ARCH=${base} -t paulhybryant/docker-kodexplorer:${arch}"
  docker build . --build-arg ARCH=${base} -t paulhybryant/docker-kodexplorer:${arch}
  echo "docker push paulhybryant/docker-kodexplorer:${arch}"
  docker push paulhybryant/docker-kodexplorer:${arch}
done
